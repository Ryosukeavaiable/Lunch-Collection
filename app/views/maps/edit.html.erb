<% if @map.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@map.errors.count, "error") %> prohibited this map from being saved:</h2>
    <ul>
      <% @map.errors.full_messages.each do |map| %>
        <li><%= map %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @map, local: true do |f| %>
  <div>
    <%= f.label :title, "ショップ名" %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body, "情報" %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :photo, "写真" %><br>
    <%= f.file_field :photo %>
  </div>
  <div>
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.submit "編集する" %>
  </div>
<% end %>